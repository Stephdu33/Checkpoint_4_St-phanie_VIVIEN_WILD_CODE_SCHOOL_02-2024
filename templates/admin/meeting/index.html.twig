{% extends 'admin.html.twig' %}

{% block title %}Meeting index
{% endblock %}

{% block body %}
	<h1>Meeting index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Date</th>
				<th>Hour</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for meeting in meetings %}
				<tr>
					<td>{{ meeting.id }}</td>
					<td>{{ meeting.date ? meeting.date|date('Y-m-d') : '' }}</td>
					<td>{{ meeting.hour ? meeting.hour|date('H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_admin_meeting_show', {'id': meeting.id}) }}">show</a>
						<a href="{{ path('app_admin_meeting_edit', {'id': meeting.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_meeting_new') }}">Create new</a>
{% endblock %}
