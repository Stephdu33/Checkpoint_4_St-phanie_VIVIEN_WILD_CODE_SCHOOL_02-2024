{% extends 'admin.html.twig' %}

{% block title %}Hello Steph!
{% endblock %}

{% block body %}
	<div class="block">
		<div class="container-education">

			<h1 class="h1-educations">Ajoute une nouvelle formation</h1>
			<div class="form-new-education-block">
				{{ form_start(formEducation) }}

				<div class="form-new-education-title">
					{{ form_widget(formEducation.title) }}
					<div class="form-education-error">
						{{ form_errors(formEducation.title) }}
					</div>
				</div>

				<div class="form-new-education-school">
					{{ form_widget(formEducation.school) }}
				</div>

				<div class="form-new-education-description">
					{{ form_widget(formEducation.description) }}
				</div>

				<div class="form-new-education-year">
					{{ form_widget(formEducation.year) }}
				</div>

				{{ form_row(formEducation.submit) }}

				{{ form_end(formEducation) }}
			</div>
			<div class="link-come-back">
				<a href="{{ path('app_admin_education_index') }}" class="link-come-back-button">Retour</a>
