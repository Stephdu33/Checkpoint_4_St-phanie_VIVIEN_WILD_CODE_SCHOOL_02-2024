{% extends 'admin.html.twig' %}

{% block title %}Hello Steph!
{% endblock %}

{% block body %}
	<div class="educations-list-block">

		<h1 class="h1-educations-list">Mes formations</h1>

		{# affichage message flash #}
		{% for message in app.flashes('notice') %}
			<div class="uk-alert-success" uk-alert>
				<a href class="uk-alert-close" uk-close></a>
				<h3>Message:
				</h3>
				<p>{{ message }}</p>
			</div>
		{% endfor %}
		<div class="block-education-button">
			<div class="new-education">
				<a href="{{ path('app_admin_education_new') }}" class="new-education-link">Enregistrer une nouvelle formation</a>
			</div>
			<div class="link-come-back">
				<a href="{{ path('app_admin_dashboard') }}" class="link-come-back-button">Retour</a>
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512" width="18px" class="icons"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M48.5 224H40c-13.3 0-24-10.7-24-24V72c0-9.7 5.8-18.5 14.8-22.2s19.3-1.7 26.2 5.2L98.6 96.6c87.6-86.5 228.7-86.2 315.8 1c87.5 87.5 87.5 229.3 0 316.8s-229.3 87.5-316.8 0c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0c62.5 62.5 163.8 62.5 226.3 0s62.5-163.8 0-226.3c-62.2-62.2-162.7-62.5-225.3-1L185 183c6.9 6.9 8.9 17.2 5.2 26.2s-12.5 14.8-22.2 14.8H48.5z"/></svg>
			</div>
		</div>
		<div class="table-educations-block">
			<table class="table-educations">
				<thead class="thead-educations">
					<tr>
						<th class="th-educations">Id</th>
						<th class="th-educations">Nom du diplôme</th>
						<th class="th-educations">Nom de l'école</th>
						<th class="th-educations">Description diplôme</th>
						<th class="th-educations">Date de fin de formation</th>
					</tr>
				</thead>
				{% for education in educations %}
					<tbody>
						<tr class="tr-educations-row">
							<td class="tr-educations">{{ education.id }}</td>
							<td class="tr-educations">{{ education.title }}</td>
							<td class="tr-educations">{{ education.school }}</td>
							<td class="tr-educations">{{ education.description }}</td>
							<td class="tr-educations">{{ education.year.format('d/m/y') }}</td>
							<td class="tr-educations">
								<a href="{{ path('app_admin_education_edit', {'id': education.id}) }}">
									<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512" width="18px" class="icons"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"/></svg>
								</a>
								<a href="{{ path('app_admin_education_delete', {'id': education.id}) }}">
									<svg xmlns="" viewbox="0 0 448 512" width="15px" class="icons"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3zM32 128H416V448c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z"/></svg>
								</a>
							</td>
						</tr>
					</tbody>
				</td>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="5">no records found</td>
		</tr>
	{% endfor %}
</tbody></table></div></div>{% endblock %}
