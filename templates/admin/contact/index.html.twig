{% extends 'admin.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<h1>Contact index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Firstname</th>
				<th>Lastname</th>
				<th>Email</th>
				<th>Phonenumber</th>
				<th>Message</th>
				<th>Company</th>
				<th>Job</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contacts %}
				<tr>
					<td>{{ contact.id }}</td>
					<td>{{ contact.firstname }}</td>
					<td>{{ contact.lastname }}</td>
					<td>{{ contact.email }}</td>
					<td>{{ contact.phonenumber }}</td>
					<td>{{ contact.message }}</td>
					<td>{{ contact.company }}</td>
					<td>{{ contact.job }}</td>
					<td>
						<a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}">show</a>
						<a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_contact_new') }}">Create new</a>
{% endblock %}
