{% block body %}
	<div class="block">
		<div class="container-edit-user">

			<h1 class="h1-user">Modifie tes informations</h1>
			<div class="form-edit-user-block">
				{{ form_start(formUser) }}

				<div class="form-edit-user-email">
					{{ form_widget(formUser.email) }}
					<div class="form-user-error">
						{{ form_errors(formUser.email) }}
					</div>
				</div>

				<div class="form-edit-user-roles">
					{{ form_widget(formUser.roles) }}
				</div>

				<div class="form-edit-user-phonenumber">
					{{ form_widget(formUser.phonenumber) }}
				</div>

				<div class="form-edit-user-localisation">
					{{ form_widget(formUser.localisation) }}
				</div>

				<div class="form-edit-user-description">
					{{ form_widget(formUser.description) }}
				</div>

				<div class="form-edit-user-job">
					{{ form_widget(formUser.job) }}
				</div>

				{{ form_row(formUser.submit) }}

				{{ form_end(formUser) }}
			</div>
			<div class="link-come-back">
				<a href="{{ path('app_admin_user_index') }}" class="link-come-back-button">Retour</a>
